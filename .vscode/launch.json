    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "preLaunchTask": "tsc",
            "name": "Launch Program",
            "program": "${workspaceRoot}\\src\\main.js",
            "cwd": "${workspaceRoot}",
            "outFiles": []
        },
        {
            "type": "node",
            "request": "launch",
            "preLaunchTask": "tsc",
            "name": "Run Mocha",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": ["${workspaceRoot}/test/**/*.js"],
            "cwd": "${workspaceRoot}",
            "outFiles": []
        }
    ]
}